<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/holo_green_light"
    android:layout_height="match_parent"
    tools:context=".addSubject_Staff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvHeader"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="Select Subject / Div for Staff"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/Yr"
            android:text="FY"
            android:textColor="@android:color/black"
            android:layout_below="@id/tvHeader"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/Str"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:layout_below="@id/tvHeader"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/Rle"
            android:text="Visiting"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:background="@drawable/bg_shape"
            android:layout_below="@id/tvHeader"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/Str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




        <GridLayout
            android:layout_marginLeft="7dp"
            android:id="@+id/gv"
            android:layout_marginTop="20dp"
            android:layout_below="@id/Yr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/selectSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Subject"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_column="1"
                android:layout_row="1"
                />
            <Spinner
                android:id="@+id/sp_Subject"
                android:layout_row="1"
                android:layout_column="2"
                />
            <TextView
                android:id="@+id/select_div"
                android:text="Select Div"
                android:textColor="@android:color/black"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                />
            <Spinner
                android:id="@+id/sp_div"
                android:layout_row="2"
                android:layout_marginTop="10dp"
                android:layout_column="2"
                />

            <TextView
                android:id="@+id/tv_GetSubject"
                android:text="Get Subject"
                android:layout_column="3"
                android:layout_row="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </GridLayout>

        <Button
            android:id="@+id/btnAddStaff"
            android:textSize="17dp"
            android:background="@drawable/bg_shape"
            android:padding="5dp"
            android:layout_below="@id/gv"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:text="Add Subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</LinearLayout>